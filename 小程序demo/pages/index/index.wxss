/**index.wxss**/

.index-top {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 160rpx;
  margin-bottom: 400rpx;
}

.index-top-image {
  height: 200rpx;
  width: 200rpx;
  border: 3px solid #fff;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: rotateAnimation 2s linear;
}

.index-top-text {
  font-size: 40rpx;
}

.index-bottom-button {
  background: transparent;
  color: #fff;
  border: 2px solid #fff;
  font-size: 32rpx;
  padding: 0 20rpx;
  border-radius: 10px;
  opacity: 0;
  animation: opacityAnimation 2s linear 2s forwards;
}

.index-bottom-button:active {
  background: lightskyblue;
}

@keyframes rotateAnimation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

@keyframes opacityAnimation {
  from {
    opacity: 0;
  }

  to {
    opacity: 1;
  }
}

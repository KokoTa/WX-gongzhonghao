/* pages/posts/post-detail/post-detail.wxss */
.post-detail {
  height: 100%;
  background: #fff;
  overflow: auto;
}

.post-image-wrap {
  height: 500rpx;
  position: relative;
}
.post-image {
  height: 100%;
  width: 100%;
}
.audio {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .3);
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
}

.post-detail-content {
  padding: 20rpx;
}

.post-detail-content .header {
  font-size: 30px;
}
.post-detail-content .collect {
  width: 100rpx;
  font-size: 14px;
  float: right;
  padding: 0;
  border: none;
  background: lightgray;
  margin-left: 20rpx;
}
.post-detail-content .collect.active {
  background: lightseagreen;
  color: #fff;
}

.detail text {
  font-size: 14px;
  color: rgb(100, 98, 98);
}
.hr {
  height: 1rpx;
  width: 100%;
  background: lightgray;
  margin: 20rpx 0;
}
.summary {
  font-size: 14px;
  line-height: 2;
  word-break: break-all;
}
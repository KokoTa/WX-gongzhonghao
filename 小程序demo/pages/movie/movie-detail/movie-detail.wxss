/* pages/movie/movie-detail/movie-detail.wxss */
.movie-detail {
  display: flex;
  flex-direction: column;
  font-size: 16px;
  color: azure;
}

.poster {
  height: 400rpx;
  width: 100%;
  background: #000;
  padding: 20rpx 0;
}
.poster image {
  height: 100%;
  width: 100%;
}

.content {
  padding : 20rpx;
}
.header {
  font-size: 26px;
  font-weight: bolder;
}
.info text{
  font-size: 14px;
  display: block;
}
.info text text {
  color: gray;
}
.rating {
  float: right;
  width: 150rpx;
  display: flex;
  flex-direction: column;
  border: 1rpx solid lightgray;
  padding: 10rpx;
  background: lightcyan;
  border-radius: 5px;
  color: lightgray;
}
.rating text {
  text-align: center;
}
.r1 {
  font-size: 14px;
}
.r2 {
  color: yellowgreen;
}
.hr {
  height: 1rpx;
  background: lightgray;
  margin: 20rpx 0;
}
.intro view {
  margin-bottom: 5rpx;
}
.intro text{
  font-size: 14px;
}